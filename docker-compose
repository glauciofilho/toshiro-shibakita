version: "3.9"

services:
  db:
    image: mysql:5.7
    container_name: mysql_server
    environment:
      MYSQL_ROOT_PASSWORD: ${DB_PASS}
      MYSQL_DATABASE: ${DB_NAME}
    volumes:
      - ./db/banco.sql:/docker-entrypoint-initdb.d/banco.sql
    networks:
      - backend

  app1:
    build: ./app
    container_name: php1
    networks:
      - backend

  app2:
    build: ./app
    container_name: php2
    networks:
      - backend

  app3:
    build: ./app
    container_name: php3
    networks:
      - backend

  nginx:
    build: ./nginx
    container_name: nginx_balancer
    ports:
      - "${NGINX_PORT}:4500"
    depends_on:
      - app1
      - app2
      - app3
    networks:
      - backend

networks:
  backend:
